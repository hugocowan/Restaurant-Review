<h1>Restaurant Reviews</h1>
<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#test1">All Restaurants</a></li>
        <% if(locals.isLoggedIn) {%>
        <li class="tab col s3"><a href="#test2">My Restaurants</a></li>
          <% } %>
      </ul>
    </div>
    <%# all restaurants %>
    <div id="test1" class="col s12">
      <% restaurants.forEach(restaurant => { %>
        <div class="col s12 m6 l4 xl4">
          <div class="card">
            <div class="card-content grey-darken-3-text">
              <div class="card-image materialboxed">
                <img src="<%= restaurant.url %>">
              </div>
              <span class="card-title">
              <%= restaurant.name %></span>
              <p><%- restaurant.getStarIcons() %></p>
              <p><span>Location:</span> <%= restaurant.location %></p>
              <p><span>Number:</span> <%= restaurant.phone %></p>
              <p><span>Website:</span> <%= restaurant.website %></p>
              <p><span>Cuisine:</span> <%= restaurant.food %></p>
            </div>
            <div class="card-action">
              <a href="/restaurants/<%= restaurant._id %>" class="restaurant-button">View Restaurant</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <%# my restaurants %>
    <% if(locals.isLoggedIn) {%>
      <div id="test2" class="col s12">
        <% restaurants.forEach(restaurant => {
          if((restaurant.user && restaurant.user.id) === locals.user.id){ %>
            <div class="col s12 m6 l4 xl4">
              <div class="card">
                <div class="card-content grey-darken-3-text">
                  <div class="card-image materialboxed">
                    <img src="<%= restaurant.url %>">
                  </div>
                  <span class="card-title">
                  <%= restaurant.name %></span>
                  <p><%- restaurant.getStarIcons() %></p>
                  <p><span>Location:</span> <%= restaurant.location %></p>
                  <p><span>Number:</span> <%= restaurant.phone %></p>
                  <p><span>Website:</span> <%= restaurant.website %></p>
                  <p><span>Cuisine:</span> <%= restaurant.food %></p>
                </div>
                <div class="card-action">
                  <a href="/restaurants/<%= restaurant._id %>" class="restaurant-button">View Restaurant</a>
                  <a class='restaurant-edit' href="/restaurants/<%= restaurant._id %>/edit" class="red-text text-darken-2">Edit Restaurant</a>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    <% } %>
  </div>
