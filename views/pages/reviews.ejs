<h1>Here are a list of reviews</h1>
<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#test1">All Reviews</a></li>
        <% if(locals.isLoggedIn) {%>
        <li class="tab col s3"><a href="#test2">My Reviews</a></li>
          <% } %>
      </ul>
    </div>
    <%# all reviews %>
    <div id="test1" class="col s12">
      <% object.forEach(review => { %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">
              <%= review.title %></span>
              <p><%= review.rating %></p>
              <p><%= review.comments %></p>
              <% if(review.restaurant){ %>
              <p><%= review.restaurant.name %></p>
              <% } %>
            </div>
            <div class="card-action">
              <a href="/reviews/<%= review._id %>" class="green-text">View Review</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <%# my reviews %>
    <% if(locals.isLoggedIn) {%>
    <div id="test2" class="col s12">
      <% object.forEach(review => {
          if((review.user && review.user.id) === locals.user.id){ %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">
              <%= review.title %></span>
              <p><%= review.rating %></p>
              <p><%= review.comments %></p>
              <% if(review.restaurant){ %>
              <p><%= review.restaurant.name %></p>
              <% } %>
            <div class="card-action">
              <a href="/reviews/<%= review._id %>" class="green-text">View Review</a>
              <a href="/reviews/<%= review._id %>/edit" class="orange-text">Edit Review</a>
            </div>
          </div>
        </div>
        <% } %>
      <% }) %>
      <% } %>
    </div>
  </div>
