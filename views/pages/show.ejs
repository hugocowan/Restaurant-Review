<div class="row">
  <h3 class="col l10"><%= object.name %></h3>
  <ul class="col l10">
      <li><%= object.location %></li>
      <li><%= object.phone %></li>
      <li><%= object.email %></li>
      <li><%= object.website %></li>
      <li><%= object.food %></li>
  </ul>
<% if(locals.isLoggedIn){ %>
  <div class="row">
    <h2>Add a new Review</h2>
    <form class='col l12' action="/restaurants/<%= object.id%>/reviews" method="post">
      <div class="input-field col l12">
        <input type="text" name="title" id='title_field' required>
        <label for="title_field">Title of Review</label>
      </div>
      <div class="input-field col l12">
        <input type="text" name="rating" id='rating_field' required>
        <label for="rating_field">Rating</label>
      </div>
      <div class="input-field col l12">
        <input type="text" name="comments" id='comments_field'>
        <label for="comments_field">Comments</label>
      </div>

        <button class="green btn">Add Review</button>
      </div>
    </form>
  </div>
<%}%>

  <% object.reviews.forEach(review => { %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">
          <%= review.title %></span>
          <p><%= review.rating %></p>
          <p><%= review.comments %></p>
        </div>
        <div class="card-action">
          <a href="/reviews/<%= review._id %>" class="green-text">View Review</a>
        </div>
      </div>
    </div>
  <% }) %>

    <form action="/restaurants/<%= object.id %>" method="post">
      <% if(locals.isLoggedIn) {%>
        <% if((object.user && object.user.id) === locals.user.id){ %>
          <div class="col l10">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn red">Delete Restaurant</button>
          </div>
        <% } %>
      <% } %>
    </form>
</div>
